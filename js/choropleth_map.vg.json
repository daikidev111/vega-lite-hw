{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Climate Change Around The World" },
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/daikidev111/vega-lite-hw/main/js/ne_110m.json",
        "format": {
            "type": "topojson", 
            "feature": "ne_110m"
        }
    },
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
          "field": "Active Cases",
          "type": "quantitative",
          "scale": {"type": "log"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Active", "type": "quantitative"}
        ]
      }
}